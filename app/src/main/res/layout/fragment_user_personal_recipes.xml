<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserPersonalRecipesUploadOptionFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F57427"
        android:orientation="vertical"
        tools:context=".activities.HomeActivity">

        <ImageView
            android:id="@+id/TheCookBookTitleUserUpload"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/header_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="676dp"
            android:background="@drawable/backgrounddesign"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/registerTextViewRegisterFragment2"
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:layout_margin="15dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Upload Your Recipe"
                android:textColor="#F57427"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextRecipeName"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/textviewdesign"
                android:ems="10"
                android:hint="Recipe Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/editTextRecipeSummary"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/textviewdesign"
                android:ems="10"
                android:hint="Recipe Summary"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/editTextRecipeIngredients"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/textviewdesign"
                android:ems="10"
                android:hint="Recipe Ingredients"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/editTextRecipeInstructions"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/textviewdesign"
                android:ems="10"
                android:hint="Recip Instructions"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/chooseImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/buttondesign"
                android:backgroundTint="#F57427"
                android:text="Choose Image" />

            <ImageView
                android:id="@+id/imageRecipe"
                android:layout_width="246dp"
                android:layout_height="132dp"
                android:layout_margin="10dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_upload"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/uploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/buttondesign"
                android:backgroundTint="#F57427"
                android:text="Upload Recipe" />

            <TextView
                android:id="@+id/textViewShowUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Show Uploads" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>